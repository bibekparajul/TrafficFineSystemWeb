@model LoginModel

@using Microsoft.AspNetCore.Identity


<!DOCTYPE html>
<html lang="en">
<head>
 <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>OTFMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

      <style>
 
            *{
                padding: 0;
                margin: 0;
                box-sizing: border-box;
            }
            body{
                /*background: #d4d6d6;*/
                background: #FFFFFF;
            }

            .row{
                background-color: aliceblue;
                border-radius: 30px;
                box-shadow: 12px 12px 22px grey;
            }

            img{
                border-top-left-radius: 20px;
                border-bottom-left-radius: 20px;
            }

            .btncl{
                border: none;
                outline: none;
                height: 50px;
                width: 100%;
                background-color: black;
                color: white;
                border-radius: 5px;
                font-weight: bold;
            }

            .btncl:hover{
                background-color: white;
                border: 1px solid;
                color: black;
            }

            .btn2{
                border: none;
                outline: none;
                height: 50px;
                width: 100%;
                background-color: green;
                color: white;
                border-radius: 5px;
                font-weight: bold;

            }
    </style>
</head>
<body>

        @if (User.Identity.IsAuthenticated)
    {
        <h1>User logged in</h1>

    }

    else
    {
     
    <section class="Form my-4 mx-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    <img src="@Url.Content("~/Images/loginPage.jpg")" class="img-fluid no-gutters" alt="home">
                </div>
                <div class="col-lg-7 px-5 pt-5" >
                    <h4>Sign into your account</h4>
                    <form asp-action="Login" method="post">
                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <div class="col-lg-7">
                                <input  asp-for="Email" class="form-control my-3 p-2" placeholder="Enter email" required>
                                <span asp-validation-for="Email" class="text-danger" ></span>
                                <div class="invalid-feedback">Please enter a valid email address</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-7">
                                <input  asp-for="Password" class="form-control my-3 p-2" placeholder="Enter password" required>
                                <span asp-validation-for="Password" class="text-danger"></span>
                               <div class="invalid-feedback">Please enter a valid email address</div>

                            </div>
                        </div>
                            
                        <div class="form-group">
                            <div class="col-lg-7">
                                <input type="submit" value="Login" class="btncl mt-3 mb-5">
                            </div>
                        </div>
                      
                    </form>
                </div>
                <div>                    
                    @using (Html.BeginForm("ButtonClick", "Landing", FormMethod.Post))
                    {
                    <input type="submit" class="btn2 mt-3 mb-5" value="Procced to see the Fine" />                    
                    }
    
                </div>
            </div>
     
        </div>
    </section>
    }





        
    <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <!-- Popper -->
  @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/esm/popper-base.min.js"
    integrity="sha384-ItzL92d1en8BfN9N9IjxVi/RZBt/BrivtynIUmOfrwBt/PdG1fCGnpvbLYo31EM9"
    crossorigin="anonymous"></script*@
  <!-- Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>