
@model FineModel

@{
    Layout = null;
}


@{
    var errorMessage = TempData["ErrorMessage"] as string;
}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>OTFMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
 
    <style>
 
            *{
                padding: 0;
                margin: 0;
                box-sizing: border-box;
            }
            body{
                background: #d4d6d6;
            }

            .row{
                background-color: aliceblue;
                border-radius: 30px;
                box-shadow: 12px 12px 22px grey;
            }

            img{
                border-top-left-radius: 20px;
                border-bottom-left-radius: 20px;
            }

            .btncl{
                border: none;
                outline: none;
                height: 50px;
                width: 100%;
                background-color: black;
                color: white;
                border-radius: 5px;
                font-weight: bold;
            }

            .btncl:hover{
                background-color: white;
                border: 1px solid;
                color: black;
            }

            .btn2{
                border: none;
                outline: none;
                height: 50px;
                width: 100%;
                background-color: green;
                color: white;
                border-radius: 5px;
                font-weight: bold;

            }
    </style>
</head>

  <body>

     


    <section class="Form my-4 mx-5">
        <div class="container ">
            <div class="row">
                <div class="col-lg-5">
                    <img src="@Url.Content("~/Images/finedetails.jpg")" class="img-fluid no-gutters" alt="home">
                </div>
                <div class="col-lg-7 px-5 pt-5" >
                    <h1>Welcome! </h1>
                    <h4>Enter FineId and Vehicle Number to See the Fine Detail</h4>
                    <form asp-action="SeeFine" method="post">


                        @if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

                        <div class="form-row">
                            <div class="col-lg-7">
                                <input asp-for="FineId" class="form-control my-3 p-2" placeholder="Enter fine Id" required> 
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input asp-for="VehicleNumber" class="form-control my-3 p-2" placeholder="Enter Vehicle Number" required>
                            </div>
                        </div>
                            
                        <div class="form-row">
                            <div class="col-lg-7">
                                <button type="submit" onclick() = "P" class="btncl mt-3 mb-5">See Fine Details</button>
                            </div>
                        </div>

                          
                     
                    </form>
                </div>
            </div>
     
        </div>
    </section>

  

    <script>
        function redirectToPage() {
            // Change "other-page.html" to the URL or filename of the page you want to redirect to
            window.location.href = "finedetail.html";
          }
    </script>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ" crossorigin="anonymous"></script>

</body>
</html>