        <section class="Form my-4 mx-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    <img src="@Url.Content("~/Images/loginPage.jpg")" class="img-fluid no-gutters" alt="home">
                </div>
                <div class="col-lg-7 px-5 pt-5" >
                    <h1>Sign into your account</h1>
                    <form action="">
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="email" class="form-control my-3 p-2" placeholder="Enter email">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="password" class="form-control my-3 p-2" placeholder="Enter password">
                            </div>
                        </div>
                            
                        <div class="form-row">
                            <div class="col-lg-7">
                                <button type="button" class="btncl mt-3 mb-5">Login</button>
                            </div>
                        </div>
                        <a href="#"> Forgot Password</a>
                     
                    </form>
                </div>
                <div>                    
                    @using (Html.BeginForm("ButtonClick", "Landing", FormMethod.Post))
                    {
                    <input type="submit" class="btn2 mt-3 mb-5" value="Procced to see the Fine" />                    
                    }
    
                </div>
            </div>
     
        </div>
    </section>



