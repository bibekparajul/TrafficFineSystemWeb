@model FineModel

<form method="post">
        <div class="card  container">
            <div class="card-header bg-success text-light ml-0  row ">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">
                      <p class="">Fine Reference Number: @Model.FineId</p>

                    </h1>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row p-8">
                        <div class="col-8 col-lg-8">

                             <div class="row p-2">
                                <h4 class="text">License Number :  @Model.LicenseNumber</h4>
                            </div>


                             <div class="row p-2">
                                <h4 class="text">Vehicle Number :  @Model.VehicleNumber</h4>
                            </div>


                             <div class="row p-2">
                                <h4>Driver's Email :  @Model.DriversAdd.Email</h4>
                            </div>     
                            
                            <div class="row p-2">
                                <h4 class="text">Driver's Name :  @Model.DriversAdd.Name</h4>
                            </div> 
                            
                            <div class="row p-2">
                                <h4 class="text">Traffic Id :  @Model.TrafficId</h4>
                            </div>   
                            

                            <div class="row p-2">
                                <h4 class="text">Issued By :  @Model.TrafficAdd.Name</h4>
                            </div>        
                            
                            <div class="row p-2">
                                <h4 class="text">Issued City :  @Model.TrafficAdd.City</h4>
                            </div>         
                            
                            <div class="row p-2">
                                <h4 class="text">Issued Area :  @Model.TrafficAdd.Area</h4>
                            </div>

                            <div class="row p-2">
                                <h4 class="text">Fine Type :  @Model.FineType</h4>
                            </div>
                            <div class="row p-2">
                                <h4 class="text pb-2"> Fine Amount :  @Model.Amount</h4>
                            </div>
                
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1 text-large">
                       <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Back to Home</a>
                       
                       </div>
                    <div class="col-12 col-md-6 pb-1">
                  <a class="btn btn-success form-control " style="height:50px;" asp-controller="Home" asp-action="Pay">Proceed to Payment</a>

                    </div>
                </div>
            </div>
        </div>
</form>
