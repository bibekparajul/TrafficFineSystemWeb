@model IEnumerable<DriversModel>  //this comes from the driverscontroller
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class ="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Drivers List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Drivers" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i>&nbsp; Create New Drivers
            </a>
        </div>
    </div>
    <br />  


<!-- this below table represent the how we are going to display the data in the table --> 
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                 Vechicle Number

            </th>
            <th>
               Name
            </th>    
                       
            <th>
                License Number
            </th>          
            <th>
                Vehicle Type
            </th>           
            
            <th>
                Email
            </th>
            <!--Edit ko lagi-->
            <th>

            </th>
            <!---->
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>    
                <td width="20%">    
                    @obj.VechileNumber
                </td>                
                <td width="10%">    
                    @obj.Name
                </td>                
                               
                <td width="20%">    
                    @obj.LicenseNumber
                </td>         
                <td width="20%">    
                    @obj.VechineType
                </td>         
                <td width="20%">    
                    @obj.Email
                </td>
                <!--this below is used for edit-->
                <td>
                    <div class="w-75 btn-group" role="group">

                  <a asp-controller="Drivers" asp-action="Edit" asp-route-id="@obj.VechileNumber"
                  class="btn btn-primary mx-2">
                      <i class="bi bi-pencil-square"></i>Edit
                  </a>   
                  <a asp-controller="Drivers" asp-action="Delete" asp-route-id="@obj.VechileNumber"
                  class="btn btn-danger mx-2">
                      <i class="bi bi-archive-fill"></i>Delete
                  </a>      
                    </div>
                </td>
                <!---->
            </tr>
        }
    </tbody>
    

</table>
</div>