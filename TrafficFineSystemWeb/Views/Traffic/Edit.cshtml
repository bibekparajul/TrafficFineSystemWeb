@model TrafficModel

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Update Traffic</h2>
        <hr />
        </div>
        <div asp-validation-summary="All"></div>

                <div class="mb-3">
            <label asp-for="TrafficId"></label>
            <input asp-for="TrafficId" class="form-control" /> 
            <span asp-validation-for="TrafficId" class="text-danger"></span> <!-- for name validation bcoz cant be empty-->
        </div>


        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" /> 
            <span asp-validation-for="Name" class="text-danger"></span> <!-- for name validation bcoz cant be empty-->
        </div>        
        

            <div class="mb-3">
            <label asp-for="Post"></label>
            <input asp-for="Post" class="form-control" />
            <span asp-validation-for="Post" class="text-danger"></span>
            </div>


            <div class="mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
            </div>         
            
            <div class="mb-3">
            <label asp-for="Area"></label>
            <input asp-for="Area" class="form-control" />
            <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
            <a asp-controller="Traffic" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to the List
            </a>


    </div>
</form>

@section Scripts{
@{
<partial name = "_ValidationScriptsPartial"></partial>
}
}