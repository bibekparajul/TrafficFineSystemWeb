
@model IEnumerable<TrafficModel>  //this comes from the categorycontroller
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class ="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Traffic List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Traffic" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i>&nbsp; Create New Traffic
            </a>
        </div>
    </div>
    <br />  


<!-- this below table represent the how we are going to display the data in the table --> 
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Traffic Id

            </th>
            <th>
                Officer Name
            </th>    
                       
            <th>
                Post
            </th>                       
            <th>
                City
            </th>                       
            <th>
                Area
            </th>
            <!--Edit ko lagi-->
            <th>

            </th>
            <!---->
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>    
                <td width="20%">    
                    @obj.TrafficId
                </td>                
                <td width="20%">    
                    @obj.Name
                </td>               
                <td width="20%">    
                    @obj.Post
                </td>                
                <td width="30%">    
                    @obj.City
                </td>                
                               
                <td width="10%">    
                    @obj.Area
                </td>
                <!--this below is used for edit-->
                <td>
                    <div class="w-75 btn-group" role="group">

                  <a asp-controller="Traffic" asp-action="Edit" asp-route-id="@obj.TrafficId"
                  class="btn btn-primary mx-2">
                      <i class="bi bi-pencil-square"></i>Edit
                  </a>   
                  <a asp-controller="Traffic" asp-action="Delete" asp-route-id="@obj.TrafficId"
                  class="btn btn-danger mx-2">
                      <i class="bi bi-archive-fill"></i>Delete
                  </a>      
                    </div>
                </td>
                <!---->
            </tr>
        }
    </tbody>
    

</table>
</div>